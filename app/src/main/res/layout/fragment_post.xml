<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/green">

        <ImageView
            android:id="@+id/backIv"
            style="@style/ImageViewBase.ToolBar"
            android:paddingLeft="@dimen/padding_sub_10dp"
            app:srcCompat="@drawable/ic_white_back" />

        <TextView
            style="@style/TextViewBase.ToolbarTitle"
            android:layout_centerInParent="true"
            android:text="@string/post"
            android:textColor="@color/white" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/info_tutor_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewBase.Label"
                    android:text="@string/address" />

                <EditText
                    android:id="@+id/address_tv"
                    style="@style/EdittextBase.Signup"
                    android:layout_width="match_parent" />

                <View style="@style/GrayDivider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewBase.Label"
                    android:text="@string/class_tc" />

                <TextView
                    android:id="@+id/class_tv"
                    style="@style/EdittextBase.Signup"
                    android:layout_width="match_parent" />

                <View style="@style/GrayDivider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewBase.Label"
                    android:text="@string/subject" />

                <TextView
                    android:id="@+id/subject_tv"
                    style="@style/EdittextBase.Signup"
                    android:layout_width="match_parent" />

                <View style="@style/GrayDivider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewBase.Label"
                    android:text="@string/time_tc" />

                <EditText
                    android:id="@+id/time_et"
                    style="@style/EdittextBase.Signup"
                    android:layout_width="match_parent" />

                <View style="@style/GrayDivider" />
            </LinearLayout>


            <TextView
                style="@style/TextViewBase.Label"
                android:text="@string/salary" />

            <EditText
                android:id="@+id/salary_et"
                style="@style/EdittextBase.Signup"
                android:layout_width="match_parent" />

            <View style="@style/GrayDivider" />

            <TextView
                style="@style/TextViewBase.Label"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/post_des" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_160dp"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@drawable/bg_image_line" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_160dp"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@drawable/bg_image_line" />

            <TextView
                android:id="@+id/post_bt"
                style="@style/TextViewBase.Button.Green"
                android:layout_marginTop="@dimen/margin_20dp"
                android:text="@string/post" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>