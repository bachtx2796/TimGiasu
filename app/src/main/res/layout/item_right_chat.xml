<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dateRightLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_1dp"
            android:layout_weight="1"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/dateRightTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:textSize="@dimen/ts_14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_1dp"
            android:layout_weight="1"
            android:background="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_10dp">

        <TextView
            android:id="@+id/message_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:gravity="right"
            android:minWidth="@dimen/size_100dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/ts_10sp" />

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_in"
            android:backgroundTint="@color/chatMeItem_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_15sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userAvatarIv"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            fresco:placeholderImage="@drawable/user_default"
            fresco:roundAsCircle="true" />
    </LinearLayout>
</LinearLayout>