<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    card_view:elevation="@dimen/size_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_120dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/itemCoverIv"
                android:layout_width="match_parent"
                fresco:placeholderImage="@drawable/no_image_andscape"
                android:layout_height="@dimen/size_120dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/status_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="visible"
                android:layout_marginStart="@dimen/margin_15dp"
                android:background="@drawable/sold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/itemTitleTv"
            style="@style/TextViewBase.Content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="Sling Bag"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/text_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemSalaryTv"
                style="@style/TextViewBase.Label"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_weight="1"
                android:text="K 300,000"
                android:textColor="@color/text_gray" />

            <!--<ImageView-->
                <!--android:id="@+id/heartIv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/favorite_background"-->
                <!--android:visibility="visible" />-->
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>