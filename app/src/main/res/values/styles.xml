<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLargePopupMenuStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSmallPopupMenuStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_item_menu</item>
    </style>

    <style name="ImageViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageViewBase.ToolBar">
        <item name="android:layout_width">?actionBarSize</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:paddingTop">@dimen/padding_20dp</item>
        <item name="android:paddingBottom">@dimen/padding_20dp</item>
    </style>

    <style name="TextViewBase.ToolbarTitle">
        <item name="android:textSize">@dimen/ts_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBase.Label">
        <item name="android:textSize">@dimen/ts_12sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewBase.Label.SignUp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewBase.Alert">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:text">*</item>
    </style>

    <style name="TextViewBase.Content">
        <item name="android:textSize">@dimen/ts_14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_black</item>
    </style>

    <style name="TextViewBase.ContentDialog">
        <item name="android:textSize">@dimen/ts_13sp</item>
        <item name="android:textColor">#2e3434</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1dp</item>
        <item name="android:background">@color/line_gray</item>
    </style>

    <style name="SpinnerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextViewBase.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewBase.Button.Green">
        <item name="android:background">@drawable/button_green_bg</item>
    </style>

    <style name="TextViewBase.Button.GreenBorder">
        <item name="android:background">@drawable/button_green_border_bg</item>
    </style>

    <style name="TextViewBase.Button.GreenBorderWhite">
        <item name="android:background">@drawable/button_green_border_white_bg</item>
    </style>

    <style name="TextViewBase.Button.WhiteBorder">
        <item name="android:background">@drawable/button_white_border_bg</item>
    </style>

    <style name="BottomBarImage">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="EdittextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/edittext_gray</item>
        <item name="android:textColorHint">@color/edittext_gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/ts_14sp</item>
    </style>

    <style name="TextViewBase.SecondContent">
        <item name="android:textSize">@dimen/ts_12sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="CheckBoxBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:checked">true</item>
        <item name="android:button">@drawable/check_box</item>
        <item name="android:textColor">#2e3434</item>
    </style>

    <style name="EdittextBase.Signup">
        <item name="android:textColorHint">@color/text_black</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">@dimen/padding_10dp</item>
        <item name="android:paddingBottom">@dimen/padding_10dp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="EditTextBase">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

    <!--Edit text-->
    <style name="EditText" parent="EditTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/border_button_gray</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/fc_light_gray</item>
        <item name="android:textSize">@dimen/ts_common</item>
    </style>

    <style name="EditText.MobileNumber">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/margin_2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>


</resources>
